@model Online_food.Models.RegisterViewModel

@{
    Layout = "_Account";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url(/Account/images/Login.jpg);">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">ثبت نام</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a href="https://www.instagram.com/barnamenevis.info/" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-instagram"></span></a>
                                </p>
                            </div>
                        </div>
                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="FullName" class="control-label"></label>
                                <input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی گیرنده"/>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" placeholder="تلفن همراه"/>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" placeholder="نشانی پستی" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Postalcode" class="control-label"></label>
                                        <input type="number" asp-for="Postalcode" class="form-control" placeholder="کدپستی 10 رقمی" />
                                        <span asp-validation-for="Postalcode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Plaque" class="control-label"></label>
                                        <input type="number" asp-for="Plaque" class="form-control" placeholder="پلاک یا واحد" />
                                        <span asp-validation-for="Plaque" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input asp-for="Password" class="form-control"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="RePassword" class="control-label"></label>
                                    <input asp-for="RePassword" class="form-control"/>
                                    <span asp-validation-for="RePassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="ثبت نام" class="btn btn-outline-warning"/>
                            </div>
                        </form>
                        <p class="text-center">آیا حساب دارید؟ <a asp-controller="Account" asp-action="Login">ورود</a></p>
                        <a class="text-left" asp-controller="Home" asp-action="Index">بازگشت به سایت</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
