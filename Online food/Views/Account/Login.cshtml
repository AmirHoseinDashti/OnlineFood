@model Online_food.Models.LoginViewModel

@{
    Layout = "_Account";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="alert alert-danger">شما دسترسی به این بخش را ندارید.</div>
                }
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url(/Account/images/Login.jpg);">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">فرم ورود</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a href="https://www.instagram.com/barnamenevis.info/" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-instagram"></span></a>
                                </p>
                            </div>
                        </div>
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control"/>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="RememberMe"/> @Html.DisplayNameFor(model => model.RememberMe)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="ورود به سایت" class="btn btn-outline-warning"/>
                            </div>
                        </form>
                        <p class="text-center"> حسابی ندارید؟ <a asp-controller="Account" asp-action="Register">ثبت نام</a></p>
                        <a class="text-left" asp-controller="Home" asp-action="Index">بازگشت به سایت</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
